<h1>Articles Listing Page</h1>
<table>
    <thead>
        <tr>
            <th> Sl.no </th>
            <th> Title </th>
            <th> Description </th>
            <th> Actions </th>
        </tr>
    </thead>

    <body>
        <% @articles.each do |article| %>
            <tr>
                <td> <%= article.id %> </td>
                <td> <%= article.title %> </td>
                <td> <%= article.description %> </td>
                <td> Place Holder </td>
            </tr>
        <% end %>
    </body>
</table>



